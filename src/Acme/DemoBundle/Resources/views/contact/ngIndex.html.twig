<table style="  /* margin-left: 3%; */
  /* margin-right: 3%; */
  width: 60%;
  display: block;
  float: left;" class="table table table-striped table-hover table-bordered">
                  <thead>
                     <th style="width:150px">Name</th>
                     <th style="width:150px">mail</th>
                     <th style="width:350px">Message</th>
                     <th style="width: 150px;">Action</th>
                  </thead>
                  <tbody>
                     <tr ng-repeat="contact in contacts">
                         <td>{[{ contact.name }]}</td>
                         <td>{[{ contact.mail }]}</td>
                         <td>{[{ contact.message }]}</td>
                         <td>
                             <button  ng-click="edit(contact)"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                             <button  ng-click="del($event, contact)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                             <button  ng-click="show(contact)"><span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span></button>
                         </td>
                     </tr>
                  </tbody>
              </table>